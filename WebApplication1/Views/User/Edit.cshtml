@using Microsoft.AspNetCore.Identity
@model WebApplication1.ViewModels.ChangeRoleViewModel
@{
    ViewBag.Title = "Edit user roles";
}
<link rel="stylesheet" type="text/css" href="~/css/font-awesome.min.css" />
<style>
    .btn {
        width: 20%;
        background: linear-gradient(45deg, rgb(4, 3, 6) 3%, rgb(102, 66, 111));
        padding: 10px 20px;
        border: none;
        font-size: 14px;
        font-weight: bold;
        color: #fff;
        border-radius: 20px;
        text-transform: uppercase;
        margin: 20px 0 30px 0;
        text-align: center;
    }

        .btn:hover {
            background: linear-gradient(45deg, rgb(4, 3, 6) 3%, rgb(77, 74, 78));
            color: #fff;
            outline: none;
            box-shadow: none;
        }
</style>

<center>
    <h2>Changing role for a user @Model.UserEmail</h2>

    <form asp-action="Edit" method="post">
        <input type="hidden" name="userId" value="@Model.UserId" />
        <div class="form-group" style="font-size:26px;">
            @foreach (IdentityRole role in Model.AllRoles)
            {
            <input type="radio" name="roles" value="@role.Name" style="display:inline-block"
                   @(Model.UserRoles.Contains(role.Name) ? "checked=\"checked\"" : "") />@role.Name  <br />
                }
        </div>
        <button type="submit" class="btn btn-default">Save</button>
    </form>
</center>
