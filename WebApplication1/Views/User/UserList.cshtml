@model IEnumerable<WebApplication1.Models.User>
    @{
    ViewBag.Title = "User list";
    }
    @using WebApplication1.ViewModels
    @addTagHelper *, WebApplication1
    <link rel="stylesheet" type="text/css" href="~/css/font-awesome.min.css" />
    <link rel="stylesheet" type="text/css" href="~/css/style.css" />
    <center>
        <div class="contain">
            <table class="table">
                @foreach (var user in Model)
                {
                <tr>
                    <td>@user.Email</td>
                    <td style="vertical-align: top">
                        <a class="text-uppercase text-info" style="font-size: 26px; text-shadow: black 0.1em 0.1em 0.2em " href="/Home/PersonalArea/@user.Id">@user.UserName</a>
                      @if(!user.Email.Contains("admin")){
                        <a style="float:right" class="btn btn-info btn-rounded" asp-action="Edit" asp-route-id="@user.Id">
                            <i class="fa fa-edit text-primary rounded-circle bg-white mr-1" style="padding: 4px 4px;"></i>Change access rights
                        </a>
                        <form asp-action="Delete" asp-controller="User" asp-route-id="@user.Id" method="post">
                            
                            <button style="float:right" type="submit" class="btn btn-danger btn-rounded">
                                <i class="fa fa-trash text-danger rounded-circle bg-white mr-1" style="padding: 4px 4px;"></i>
                                Delete
                            </button>
                            
                        </form>
                        }
                    </td>
                </tr>
                }
            </table>
        </div>
    </center>
